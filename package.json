{
  "config": {
    "app_svrdev_port": 6070,
    "target": "target",
    "reports": "target/reports",
    "screenshots": "target/reports/screenshots/actual/",
    "screenshot-path-pattern": "\\${FIXTURE}/\\${TEST}/\\${USERAGENT}/\\${FILE_INDEX}.png"
  },
  "private": true,
  "scripts": {
    "pretty_frmt": "./node_modules/.bin/prettier --config ${PWD}/.prettierrc --write './src/js/**/*.js' './src/tests/**/*.js' './src/assets/css/**/*.css'",
    "clean": "del 'target/*' '!.gitkeep'",
    "serve": "cross-env NODE_ENV=development webpack-dev-server --config=config/webpack.config.js --watch --no-progress",
    "postcss-debug": "cross-env NODE_ENV=development postcss-debug --config postcss.config.debug.js app.css",
    "test": "npm-run-all clean testcafe",
    "testcafe": "testcafe 'firefox:headless,chrome:headless --no-sandbox --disable-gpu' -S -s $npm_package_config_screenshots -p $npm_package_config_screenshot_path_pattern -r spec,xunit:$npm_package_config_reports/report.xml src/tests/index-test.js",
    "test-cafe-live": "testcafe 'chrome' -L -S -s $npm_package_config_screenshots -p $npm_package_config_screenshot_path_pattern -r spec src/tests/index-test.js",
    "serventest": "start-server-and-test serve http-get://localhost:$npm_package_config_app_svrdev_port/dist/index.html testcafe",
    "serventest-live": "start-server-and-test serve http-get://localhost:$npm_package_config_app_svrdev_port/dist/index.html test-cafe-live",
    "ci": "npm-run-all clean serventest",
    "postinstall": "make-dir build dist target"
  },
  "resolutions": {
    "**/@types/extract-text-webpack-plugin": "^2",
    "**/@types/html-webpack-plugin": "^2",
    "**/@types/webpack": "^3",
    "**/@types/webpack-dev-server": "^2",
    "**/postcss": "^7"
  },
  "devDependencies": {
    "@types/extract-text-webpack-plugin": "^2",
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/useragent": "^2.1.1",
    "@types/webpack": "^3",
    "@types/webpack-dev-server": "^2.9.4",
    "@types/webpack-env": "^1.13.6",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.7",
    "del-cli": "^1.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "make-dir-cli": "^1.0.0",
    "npm-run-all": "^4.1.3",
    "postcss": "^7",
    "postcss-advanced-variables": "^3.0.0",
    "postcss-atrule-bem": "^3.1.1",
    "postcss-calc": "^7.0.1",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-debug": "^0.4.2",
    "postcss-loader": "^2.0.8",
    "postcss-nesting": "^7.0.0",
    "prettier": "^1.13.4",
    "pretty": "^2.0.0",
    "pretty-format": "^23.5.0",
    "raw-loader": "^0.5.1",
    "sanitize-filename": "^1.6.1",
    "start-server-and-test": "^1.7.0",
    "style-loader": "^0.19.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-prettier": "^1.0.6",
    "tailwindcss": "^0",
    "testcafe": "^1",
    "typescript": "^3.0.1",
    "url-loader": "^1.0.1",
    "useragent": "^2.3.0",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16",
    "vue-template-loader": "^1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.11.1",
    "webpack-disk-plugin": "^0.0.2"
  },
  "dependencies": {
    "postcss-easy-import": "^3.0.0",
    "vue": "^2"
  }
}
